<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="www.leigq.com.blackboxmusic.activity.ListDetailsActivity">


    <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/relativeLayout">

        <ImageButton
                android:id="@+id/backIB"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_back"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/nameTV"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@color/colorPrimary"
            android:id="@+id/relativeLayout1"
            android:layout_below="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <ImageView
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/imgIV"
                android:background="@drawable/jay"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

        <TextView
                android:id="@+id/descTV"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:layout_toRightOf="@+id/imgIV"
                android:textColor="@android:color/white"
                android:text="dsaddsdsadsasdasdssdasadsdsdsdsadsddsdsdsaddsdsdsadasdsdasdasdsadsdsadsadsadasdsadsadadasdsadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/relativeLayout1"
            android:id="@+id/listRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
